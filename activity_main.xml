<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/signup"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome back!"
        android:gravity="center"
        android:textSize="30dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log in your assistant of My company"
        android:gravity="center"
        android:textStyle="italic"
        android:textSize="18dp"
        android:layout_marginTop="3dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="35dp">
        <EditText
            android:layout_gravity="center"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:hint="Give your username..."
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/person"
            android:background="@drawable/hintuser"
            />
        <EditText
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:hint="Password"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/lockblue"
            android:inputType="textPassword"
            android:background="@drawable/hintuser"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="38dp"
        />

    <Button
        android:textColor="@color/white"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:text="Log in"
        android:layout_gravity="center"
        android:background="@drawable/loginbuttom"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or connect using"
        android:layout_gravity="center"
        android:textSize="17dp"
        android:layout_marginTop="25dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        >
        <Button
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="Facebook"
            android:drawableLeft="@drawable/plaint"
            android:background="@drawable/facebookbutton"
            android:textColor="@color/white"
            android:drawablePadding="0dp"
            android:layout_marginLeft="55dp"

            />
        <Button
            android:layout_marginLeft="16dp"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="Google"
            android:drawableLeft="@drawable/whitee"
            android:background="@drawable/googlebutton"
            android:drawablePadding="0dp"
            android:textColor="@color/white">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
            android:textSize="15dp"
        />
        <TextView
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textColor="@color/colorAccent"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/login"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Login"
            android:background="@drawable/footer1"
            android:layout_marginStart="20dp"
            />
        <Button
            android:id="@+id/signup"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="SignUp"
            android:background="@drawable/footer1"
            android:layout_marginStart="20dp"
            />
        <Button
            android:id="@+id/profile"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Profile"
            android:background="@drawable/footer1"
            android:layout_marginStart="20dp"
            />
        <Button
            android:id="@+id/list"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="List"
            android:background="@drawable/footer1"
            android:layout_marginStart="20dp"
            />

    </LinearLayout>
</LinearLayout>