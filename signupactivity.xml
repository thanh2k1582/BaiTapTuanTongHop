<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's Get Started"
            android:textColor="@color/black"
            android:textSize="28dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            />
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create an account to Q Allure to get all features"
            android:textSize="18dp"
            android:layout_marginTop="8dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">
            <EditText
                android:layout_width="350dp"
                android:layout_height="65dp"
                android:hint="Username"
                android:layout_gravity="center"
                android:background="@drawable/signupbutton"
                android:drawableLeft="@drawable/person"
                android:drawablePadding="15dp"
                android:textColor="@color/user"
                android:textSize="19dp"
                />
            <EditText
                android:layout_marginTop="20dp"
                android:layout_width="350dp"
                android:layout_height="65dp"
                android:hint="Email"
                android:layout_gravity="center"
                android:background="@drawable/signupbutton"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="15dp"
                android:textColor="@color/user"
                android:textSize="19dp"
                />
            <EditText
                android:layout_marginTop="20dp"
                android:layout_width="350dp"
                android:layout_height="65dp"
                android:hint="Phone"
                android:layout_gravity="center"
                android:background="@drawable/signupbutton"
                android:drawableLeft="@drawable/ic_baseline_phone_android_24"
                android:drawablePadding="15dp"
                android:textColor="@color/user"
                android:textSize="19dp"
                />
            <EditText
                android:layout_marginTop="20dp"
                android:layout_width="350dp"
                android:layout_height="65dp"
                android:hint="Password"
                android:layout_gravity="center"
                android:background="@drawable/signupbutton"
                android:drawableLeft="@drawable/lock"
                android:drawablePadding="15dp"
                android:textColor="@color/user"
                android:textSize="19dp"
                />
            <EditText
                android:layout_marginTop="20dp"
                android:layout_width="350dp"
                android:layout_height="65dp"
                android:hint="Confirm password"
                android:layout_gravity="center"
                android:background="@drawable/signupbutton"
                android:drawableLeft="@drawable/lock"
                android:drawablePadding="15dp"
                android:textColor="@color/user"
                android:textSize="19dp"
                />
            <Button
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/loginbuttom"
                android:text="CREATE"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:layout_marginTop="20dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account?"
                    android:textSize="16dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login here"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/login"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Login"
            android:background="@drawable/footer1"
            android:layout_marginStart="20dp"
            />
        <Button
            android:id="@+id/signup"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="SignUp"
            android:background="@drawable/footer1"
            android:layout_marginStart="20dp"
            />
        <Button
            android:id="@+id/profile"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Profile"
            android:background="@drawable/footer1"
            android:layout_marginStart="20dp"
            />
        <Button
            android:id="@+id/list"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="List"
            android:background="@drawable/footer1"
            android:layout_marginStart="20dp"
            />

    </LinearLayout>
</LinearLayout>